    <script>
        let susLevel = 0;
        const mainMessage = document.getElementById('mainMessage');
        const memesContainer = document.getElementById('memesContainer');
        const susCounter = document.getElementById('susCounter');

        const memeEmojis = ['üòÇ', 'üíÄ', 'ü§°', 'üì∏', 'üé™', 'üö®', '‚ö†Ô∏è', 'üî•', 'üíØ', 'üé≠', 'üì¢', '‚≠ê'];
        const randomTrolls = [
            "üé™ WELCOME TO THE CIRCUS üé™",
            "üíÄ GET REKT NOOB üíÄ",
            "ü§° YOU JUST GOT CLOWNED ü§°",
            "üì∏ CAUGHT IN 4K üì∏",
            "üö® BRUH MOMENT DETECTED üö®",
            "üé≠ IT'S JUST A PRANK BRO üé≠"
        ];

        // Create floating memes
        function createMeme() {
            const meme = document.createElement('div');
            meme.className = 'meme';
            meme.innerHTML = memeEmojis[Math.floor(Math.random() * memeEmojis.length)];
            meme.style.left = Math.random() * 100 + '%';
            meme.style.animationDelay = Math.random() * 2 + 's';
            meme.style.animationDuration = (Math.random() * 2 + 3) + 's';
            memesContainer.appendChild(meme);

            setTimeout(() => {
                meme.remove();
            }, 5000);
        }

        // Create memes periodically
        setInterval(createMeme, 1000);

        // Main troll function
        function enhanceFriendship(button, hateMessage, notification) {
            susLevel += Math.floor(Math.random() * 15) + 10;
            susCounter.textContent = `Sus Level: ${Math.min(susLevel, 100)}% üìà`;
            
            if (susLevel >= 100) {
                susCounter.textContent = "Sus Level: MAXIMUM SUS üö®";
                susCounter.style.animation = 'sus 0.5s infinite';
            }
            
            // Update main message
            mainMessage.textContent = hateMessage;
            
            // Show meme notification
            const notif = document.createElement('div');
            notif.className = 'notification';
            notif.textContent = notification;
            document.body.appendChild(notif);
            
            setTimeout(() => {
                notif.remove();
            }, 3000);
            
            // Get button position for effects
            const rect = button.getBoundingClientRect();
            const centerX = rect.left + rect.width / 2;
            const centerY = rect.top + rect.height / 2;
            
            // Create airhorn effect
            const airhorn = document.createElement('div');
            airhorn.className = 'airhorn';
            airhorn.innerHTML = 'üìØ';
            airhorn.style.left = centerX + 'px';
            airhorn.style.top = centerY + 'px';
            document.body.appendChild(airhorn);
            
            setTimeout(() => {
                airhorn.remove();
            }, 500);
            
            // Spawn extra memes on click
            for (let i = 0; i < 3; i++) {
                setTimeout(() => createMeme(), i * 200);
            }

            // Screen shake with meme effect
            document.body.style.transform = 'translate(' + (Math.random() * 10 - 5) + 'px, ' + (Math.random() * 10 - 5) + 'px) rotate(' + (Math.random() * 4 - 2) + 'deg)';
            setTimeout(() => {
                document.body.style.transform = 'translate(0, 0) rotate(0deg)';
            }, 200);

            // Button gets "sus"
            button.style.animation = 'sus 0.3s ease';
            setTimeout(() => {
                button.style.animation = '';
            }, 300);
        }

        // Auto troll messages
        setInterval(() => {
            if (Math.random() > 0.7) {
                const randomTroll = randomTrolls[Math.floor(Math.random() * randomTrolls.length)];
                mainMessage.textContent = randomTroll;
                
                // Spawn bonus meme
                createMeme();
            }
        }, 5000);

        // Random sus level increases
        setInterval(() => {
            if (Math.random() > 0.8) {
                susLevel += Math.floor(Math.random() * 5) + 1;
                susCounter.textContent = `Sus Level: ${Math.min(susLevel, 100)}% üìà`;
                
                if (susLevel >= 100) {
                    susCounter.textContent = "Sus Level: MAXIMUM SUS üö®";
                }
            }
        }, 3000);
    </script>
